{% block content %}
    <div class="form_box">
        <h1 class="h3 mb-3 font-weight-normal">Create new quiz!</h1>
        <hr>
    {#    <select class="js-example-basic-multiple" name="states[]" multiple="multiple" style="width: 500px">#}
