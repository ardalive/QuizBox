{% extends 'base.html.twig' %}

{% block title %}QB Quiz{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/quizTable.css">
{% endblock %}
{% block content %}
    <h1>Table of existing quizzes</h1>

    <div class="container">
        <div class="containerFilterBtn">
            <form action="" method="get">
                <label for="filter">Filter by name: </label>
                <input name="filter" type="text">
                <button type="submit" class="btn btn-lg btn-primary filterBtn">Filter</button>
            </form>
        </div>
        <hr>
        <div class="tableHeader">
            <div>{{ knp_pagination_sortable(pagination, 'Quiz name', 'b.name') }}</div>
            <div>Quiz description</div>
            <div>Status</div>
            <div>{{ knp_pagination_sortable(pagination, 'Date of creation', 'b.dateOfCreation') }}</div>
            <div></div>
        </div>
            {% for oneQuiz in pagination %}
                <hr>
                <div id = "grid">
                    <div>{{ oneQuiz.name }}</div>
                    <div>{{ oneQuiz.Description }}</div>
                    {% if oneQuiz.isActive == true %}
                        <div><a>active</a></div>
                    {% else %}
                        <div><a>not active</a></div>
                    {% endif %}
                    <div>{{ oneQuiz.dateOfCreation|date("m.d.Y") }}</div>
                    <div class="gridin">
                        <a href="{{ path('edit_quiz', {'id': oneQuiz.id }) }}">Update</a>
                    </div>
                </div>
            {% endfor %}
        <hr>
    </div>
    <div class="navigation text-center" id="navigationMenu">
        {{ knp_pagination_render(pagination) }}
    </div>
    <div>
        <a href="{{ path('add_quiz') }}"> Create a new quiz</a>
    </div>
{% endblock %}
