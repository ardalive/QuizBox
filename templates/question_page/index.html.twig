{% extends 'base.html.twig' %}

{% block title %}QB Question{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/questionTable.css">
{% endblock %}

{% block content %}
    <h1>Table of existing questions</h1>
    <div style="display: flex; width: 90%; margin: 0 auto">
        <div style="width: 50%; border: 1px solid black; font-weight: bold">Questions</div>
        <div style="width: 50%; border: 1px solid black; font-weight: bold">Answers</div>
        <div style="width: 10%;"></div>
    </div>
    {% for oneQuestion in allQuestion %}
        <div style="display: flex;width: 90%; margin: 0 auto">
            <div style="width: 50%; border: 1px solid gray">{{ oneQuestion.QuestionBody }}</div>
            <div style="width: 50%; border: 1px solid gray">{{ oneQuestion.getAnswerBodys() }}</div>
            <div style="width: 10%; margin: auto;"><a href="{{ path('edit_question', {'id': oneQuestion.id }) }}">Update</a></div>
        </div>
    {% endfor %}
    <div style="margin: 0 auto;margin-top: 20px; display: flex; width: 90%">
        <a href="{{path('add_question')}}" style="font-weight: bold">You can create a new question</a>
    </div>
{% endblock %}
