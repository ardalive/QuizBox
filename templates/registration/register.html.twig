{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

    {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
    {{ form_row(registrationForm.password.first, {'attr': {'placeholder': 'Password'}}) }}
    {{ form_row(registrationForm.password.second, {'attr': {'placeholder': 'Confirm password'}}) }}

    {{ form_row(registrationForm.submit) }}
    <hr>
    <h1 class="h6 mb-3 font-weight-normal">Alredy have an account?</h1>
    <a href="{{ path('app_login') }}" class="button">Sign in</a>

    {{ form_end(registrationForm) }}


{% endblock %}
